<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:outlineSpotShadowColor="@color/colorPrimaryDark"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Days"
            android:textColor="@color/colorText1"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_pickupAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/chipMon"
            app:layout_constraintTop_toBottomOf="@+id/chipMon"
            app:srcCompat="@drawable/ic_panorama_fish_eye_black_24dp" />

        <ImageView
            android:id="@+id/img_dropoffAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/img_pickupAddress"
            app:layout_constraintStart_toStartOf="@+id/img_pickupAddress"
            app:layout_constraintTop_toBottomOf="@+id/divider10"
            app:srcCompat="@drawable/ic_panorama_fish_eye_black_24dp" />

        <View
            android:id="@+id/divider10"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="@+id/img_pickupAddress"
            app:layout_constraintStart_toStartOf="@+id/img_pickupAddress"
            app:layout_constraintTop_toBottomOf="@+id/img_pickupAddress" />

        <TextView
            android:id="@+id/txt_pickupAddress"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Plot A 5/8, Block 5 A Block 5
Nazimabad, Karach, Karachi City, Sindh"
            android:textColor="@color/colorText1"
            app:layout_constraintBottom_toBottomOf="@+id/img_pickupAddress"
            app:layout_constraintStart_toEndOf="@+id/img_pickupAddress"
            app:layout_constraintTop_toTopOf="@+id/img_pickupAddress" />

        <TextView
            android:id="@+id/txt_dropoffAddress"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Plot 177 S, Pakistan Employees Co-Operative
Housing Society Block 2 PECHS, Karachi,
Karachi City, Sindh, Pakistan"
            android:textColor="@color/colorText1"
            app:layout_constraintBottom_toBottomOf="@+id/img_dropoffAddress"
            app:layout_constraintStart_toEndOf="@+id/img_dropoffAddress"
            app:layout_constraintTop_toTopOf="@+id/img_dropoffAddress" />


        <com.google.android.material.chip.Chip
            android:id="@+id/chipMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:text="M" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipWed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/chipTue"
            app:layout_constraintStart_toEndOf="@+id/chipTue"
            app:layout_constraintTop_toTopOf="@+id/chipTue"
            android:text="W" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/chipWed"
            app:layout_constraintStart_toEndOf="@+id/chipWed"
            app:layout_constraintTop_toTopOf="@+id/chipWed"
            android:text="T" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/chipThu"
            app:layout_constraintStart_toEndOf="@+id/chipThu"
            app:layout_constraintTop_toTopOf="@+id/chipThu"
            android:text="F" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/chipFri"
            app:layout_constraintStart_toEndOf="@+id/chipFri"
            app:layout_constraintTop_toTopOf="@+id/chipFri"
            android:text="S" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/chipSat"
            app:layout_constraintStart_toEndOf="@+id/chipSat"
            app:layout_constraintTop_toTopOf="@+id/chipSat"
            android:text="S" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/chipMon"
            app:layout_constraintStart_toEndOf="@+id/chipMon"
            app:layout_constraintTop_toTopOf="@+id/chipMon"
           android:text="T" />

        <View
            android:id="@+id/divider8"
            android:layout_width="393dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAmount" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChange"

            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:text="Change"

            android:textColor="@color/colorAccent"
            app:icon="@drawable/ic_sync_black_24dp"
            app:iconTint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider8"
            app:rippleColor="@color/colorAccent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="Cancel"

            android:textColor="@color/colorRed"
            app:icon="@drawable/ic_delete_black_24dp"
            app:iconTint="@color/colorRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider8"
            app:rippleColor="@color/colorRed" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPay"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:textColor="@color/colorGreen"
            app:icon="@drawable/ic_track_changes_black_24dp"
            app:iconTint="@color/colorGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCancel"
            app:layout_constraintStart_toEndOf="@+id/btnChange"
            app:layout_constraintTop_toTopOf="@+id/btnCancel"
            app:rippleColor="@color/colorGreen" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Total Amount"
            android:textColor="@color/colorText1"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/img_dropoffAddress"
            app:layout_constraintTop_toBottomOf="@+id/txt_dropoffAddress" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            android:text="Status"
            android:textColor="@color/colorText1"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_dropoffAddress" />

        <TextView
            android:id="@+id/textViewAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="5000"
            android:textColor="@color/colorText1"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView40"
            app:layout_constraintTop_toBottomOf="@+id/textView40" />

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Pending"
            android:textColor="@color/colorText1"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>