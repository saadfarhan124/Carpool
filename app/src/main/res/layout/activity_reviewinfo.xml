<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_reviewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Review Information"
        android:textAlignment="center"
        android:textColor="@color/colorText1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_ac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="AC"
        android:textColor="@color/colorText1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/img_ac"
        app:layout_constraintTop_toBottomOf="@+id/img_ac" />

    <TextView
        android:id="@+id/txt_nonAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Non AC"
        android:textColor="@color/colorText1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/img_nonAC"
        app:layout_constraintTop_toBottomOf="@+id/img_nonAC" />

    <TextView
        android:id="@+id/txt_priceAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="7,598"
        android:textColor="@color/colorText1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_ac"
        app:layout_constraintTop_toBottomOf="@+id/txt_ac" />

    <TextView
        android:id="@+id/txt_priceNonAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7,657"
        android:textColor="@color/colorText1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_monthNonAC"
        app:layout_constraintEnd_toStartOf="@+id/txt_monthNonAC"
        app:layout_constraintTop_toTopOf="@+id/txt_monthNonAC" />

    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_priceAC" />

    <TextView
        android:id="@+id/txt_pickupAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="55dp"
        android:text="Plot A 5/8, Block 5 A Block 5
Nazimabad, Karach, Karachi City, Sindh"
        android:textColor="@color/colorText1"
        app:layout_constraintBottom_toBottomOf="@+id/img_pickupAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_pickupAddress"
        app:layout_constraintTop_toTopOf="@+id/img_pickupAddress" />

    <TextView
        android:id="@+id/txt_dropoffAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="55dp"
        android:text="Plot 177 S, Pakistan Employees Co-Operative
Housing Society Block 2 PECHS, Karachi,
Karachi City, Sindh, Pakistan"
        android:textColor="@color/colorText1"
        app:layout_constraintBottom_toBottomOf="@+id/img_dropoffAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_dropoffAddress"
        app:layout_constraintTop_toTopOf="@+id/img_dropoffAddress" />

    <TextView
        android:id="@+id/txt_lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textColor="@color/colorText1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_dropoffAddress" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Saad "
        android:textColor="@color/colorText1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_lbl_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_lbl_name" />

    <TextView
        android:id="@+id/txt_lbl_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Number"
        android:textColor="@color/colorText1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    <TextView
        android:id="@+id/txt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+9233312131"
        android:textColor="@color/colorText1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_lbl_number"
        app:layout_constraintTop_toBottomOf="@+id/txt_lbl_number" />

    <TextView
        android:id="@+id/txt_lbl_destinationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Time to reach destination"
        android:textColor="@color/colorText1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_number"
        app:layout_constraintTop_toBottomOf="@+id/txt_number" />

    <TextView
        android:id="@+id/txt_destinationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="9:00 - 9:30"
        android:textColor="@color/colorText1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_lbl_destinationTime"
        app:layout_constraintTop_toBottomOf="@+id/txt_lbl_destinationTime" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submitReq"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:paddingLeft="92dp"
        android:paddingTop="14dp"
        android:paddingRight="92dp"
        android:paddingBottom="14dp"
        android:text="Submit Request"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_returnTime" />

    <TextView
        android:id="@+id/txt_lbl_returnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Return time"
        android:textColor="@color/colorText1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_destinationTime"
        app:layout_constraintTop_toBottomOf="@+id/txt_destinationTime" />

    <TextView
        android:id="@+id/txt_returnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="18:00 - 18:30"
        android:textColor="@color/colorText1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_lbl_returnTime"
        app:layout_constraintTop_toBottomOf="@+id/txt_lbl_returnTime" />

    <ImageView
        android:id="@+id/img_ac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/txt_reviewInfo"
        app:layout_constraintTop_toBottomOf="@+id/txt_reviewInfo"
        app:srcCompat="@mipmap/ic_logo_round" />

    <ImageView
        android:id="@+id/img_nonAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_ac"
        app:layout_constraintStart_toEndOf="@+id/img_ac"
        app:layout_constraintTop_toTopOf="@+id/img_ac"
        app:srcCompat="@mipmap/ic_logo_round" />

    <TextView
        android:id="@+id/txt_monthAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/mo"
        android:textColor="@color/colorText1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_priceAC"
        app:layout_constraintStart_toEndOf="@+id/txt_priceAC"
        app:layout_constraintTop_toTopOf="@+id/txt_priceAC" />

    <TextView
        android:id="@+id/txt_monthNonAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="/mo"
        android:textColor="@color/colorText1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_nonAC"
        app:layout_constraintTop_toBottomOf="@+id/txt_nonAC" />

    <ImageView
        android:id="@+id/img_pickupAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/divider9"
        app:layout_constraintTop_toBottomOf="@+id/divider9"
        app:srcCompat="@drawable/ic_panorama_fish_eye_black_24dp" />

    <ImageView
        android:id="@+id/img_dropoffAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/img_pickupAddress"
        app:layout_constraintStart_toStartOf="@+id/img_pickupAddress"
        app:layout_constraintTop_toBottomOf="@+id/divider10"
        app:srcCompat="@drawable/ic_panorama_fish_eye_black_24dp" />

    <View
        android:id="@+id/divider10"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/img_pickupAddress"
        app:layout_constraintStart_toStartOf="@+id/img_pickupAddress"
        app:layout_constraintTop_toBottomOf="@+id/img_pickupAddress" />

</androidx.constraintlayout.widget.ConstraintLayout>