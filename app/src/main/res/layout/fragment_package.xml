<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/packageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/packageProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorAccent"
        android:translationZ="15dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/packageRecyclerView"
        app:layout_constraintEnd_toEndOf="@+id/packageRecyclerView"
        app:layout_constraintStart_toStartOf="@+id/packageRecyclerView"
        app:layout_constraintTop_toTopOf="@+id/packageRecyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>